# 应用基础配置
APP_NAME=AI Sales Assistant
APP_VERSION=1.0.0
ENVIRONMENT=testing
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# 数据库配置  
DATABASE_URL=
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_sales_db
DB_USER=ai_sales_user
DB_PASSWORD=ai_sales_password

# Redis配置
REDIS_URL=
REDIS_HOST=localhost  
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Qdrant向量数据库配置
QDRANT_URL=http://localhost:6333
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_COLLECTION_NAME=course_knowledge

# LLM服务配置
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=
OPENAI_MODEL=gpt-3.5-turbo

# DeepSeek配置 (轻量模型)
DEEPSEEK_API_KEY=your-deepseek-api-key  
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# 默认LLM提供商选择
DEFAULT_LLM_PROVIDER=openai

# LLM通用配置
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.7
LLM_TIMEOUT=60

# 日志配置
LOG_LEVEL=INFO